@model Actor

@{
	ViewData["Title"] = "agregar nuevo actor";
}
<div class="row  text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Detalles para @Model.NombreCompleto</h1>

		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
			
				
					<div class="form-group text-center">
						<img class="border-info rounded-circle" style="max-width: 150px" id="fotoperfilPosible" />
					</div>
					<div class="form-group">
						<label asp-for="FotoPerfilURL" class="control-label"></label>
						<input asp-for="FotoPerfilURL" class="form-control" readonly />
						<span asp-validation-for="FotoPerfilURL" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="NombreCompleto" class="control-label">
						</label>
						<input asp-for="NombreCompleto" class="form-control" readonly />
						<span asp-validation-for="NombreCompleto" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Bio" class="control-label">
						</label>
						<input asp-for="Bio" class="form-control" readonly/>
						<span asp-validation-for="Bio" class="text-danger"></span>
					</div>
					<div class="form-group">
						<a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
						<a class="btn btn-outline-secondary" asp-action="Index">Mostrar todos </a>
					</div>
			
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script>
		$(document).ready(function () {
			var output = document.getElementById('fotoperfilPosible')
			output.src = $("#FotoPerfilURL").val();
		})

	</script>
}